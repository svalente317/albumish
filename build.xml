<project xmlns:ivy="antlib:org.apache.ivy.ant" name="albumish" default="jar">
  <property name="MainClass" value="albumish.Jukebox"/>
  <target name="jar" depends="compile">
    <jar destfile="albumish.jar" basedir="bin">
      <manifest>
        <attribute name="Main-Class" value="${MainClass}"/>
      </manifest>
    </jar>
  </target>
  <target name="compile">
    <!-- ivy:retrieve/ -->
    <mkdir dir="bin"/>
    <javac debug="on" optimize="on" srcdir="src" destdir="bin"
           includeantruntime="false">
      <classpath>
        <pathelement location="/usr/share/java/swt4.jar"/>
        <pathelement location="/usr/share/java/gson-2.8.5.jar"/>
        <pathelement location="/usr/share/java/imgscalr-lib-4.2.jar"/>
        <pathelement location="/usr/share/java/jl-1.0.1.jar"/>
        <pathelement location="snapshot/jaudiotagger-2.2.6-SNAPSHOT.jar"/>
      </classpath>
    </javac>
    <copy todir="bin/albumish/icons">
      <fileset dir="src/albumish/icons"/>
    </copy>
  </target>
</project>
